set commentary
set easymotion
set surround
set multiple-cursors
set highlightedyank

let mapleader = " "
set scrolloff = 8
set showmode
set showcmd
set incsearch
set hlsearch

nmap <leader>gpe <action>(GotoPreviousError)
nmap <leader>gne <action>(GotoNextError)
nmap <leader>gD <action>(GotoDeclaration)
nmap <leader>gr <action>(GotoDeclaration)
nmap <leader>gt <action>(GotoTypeDeclaration)
nmap <leader>gd <action>(GotoImplementation)
nmap <leader>gi <action>(GotoImplementation)

nmap <leader>R <action>(RenameElement)
nmap <leader>r <action>(Refactorings.QuickListPopupAction)
vmap <leader>r <action>(Refactorings.QuickListPopupAction)
nmap <leader>f <action>(ShowIntentionActions)
nmap <leader>F <action>(CodeCleanup)
nmap <leader>o <action>(ActivateStructureToolWindow)

nmap <C-K> <action>(MoveStatementUp)
nmap <C-J> <action>(MoveStatementDown)

nmap <leader>m <action>(SelectNextOccurrence)
nmap <leader>M <action>(SelectAllOccurrences)

vmap <leader>m <action>(SelectNextOccurrence)
vmap <leader>M <action>(SelectAllOccurrences)

nmap <C-P> <action>(GotoFile)
nmap <C-S-P> <action>(GotoAction)

nmap L :tabnext<CR>
nmap H :tabprev<CR>
nmap <Esc> :noh<CR>

set number relativenumber

