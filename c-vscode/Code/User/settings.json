{
  // editing
  // > font
  "editor.fontFamily": "SauceCodePro Nerd Font",
  "editor.fontSize": 15,

  // > autocomplete
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.quickSuggestionsDelay": 10,
  "editor.suggestOnTriggerCharacters": true,
  "editor.tabCompletion": "on",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.wordBasedSuggestions": true,

  // > behavior and appearance
  // > > theme
  "workbench.colorTheme": "One Dark Pro",
  "workbench.colorCustomizations": {
    "[One Dark Pro]": {
      "editorCursor.foreground": "#78909c",
      "editorCursor.background": "#192228",
      "terminalCursor.foreground": "#78909c",
      "terminalCursor.background": "#192228"
    }
  },
  // > > text, lines, and columns
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.rulers": [80, 120, 150],
  "editor.lineNumbers": "relative",
  // > > docs
  "editor.parameterHints.enabled": true,
  // > > cursor
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.cursorBlinking": "solid",
  // > > automatic actions
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  // > > handling files
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "explorer.confirmDelete": false,
  // > > terminal
  "terminal.integrated.tabs.enabled": true,
  // > > extensions
  // > > > Installed extensions:
  // bradlc.vscode-tailwindcss
  // dbaeumer.vscode-eslint
  // donjayamanne.createuniqueid
  // eamodio.gitlens
  // EditorConfig.EditorConfig
  // esbenp.prettier-vscode
  // GitHub.remotehub
  // GitHub.vscode-pull-request-github
  // golang.go
  // ms-python.python
  // ms-python.vscode-pylance
  // ms-vscode.remote-repositories
  // ms-vscode.sublime-keybindings
  // ms-vscode.test-adapter-converter
  // msjsdiag.vscode-react-native
  // Orta.vscode-jest
  // PKief.material-icon-theme
  // rust-lang.rust
  // silvenon.mdx
  // stkb.rewrap
  // vscodevim.vim
  // yzhang.markdown-all-in-one
  // zhuangtongfa.material-theme
  "extensions.ignoreRecommendations": true,

  // misc
  "telemetry.telemetryLevel": "off",
  "update.mode": "none",
  "update.showReleaseNotes": true,

  // git
  "git.autofetch": true,
  "git.autofetchPeriod": 300,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // > gitlens
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.enabled": false,
  "gitlens.defaultDateLocale": null,
  "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
  "gitlens.defaultDateFormat": "YYYY-MM-DDThh:mm:ss",
  "gitlens.defaultTimeFormat": "hh:mm:ss",

  // vim (to be moved to vimrc)
  "vim.useCtrlKeys": true,
  "vim.ignorecase": false,
  "vim.smartcase": false,
  "vim.leader": " ",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "g", "p", "e"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "g", "n", "e"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "g", "p", "w"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "g", "n", "w"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "g", "D"],
      "commands": ["editor.action.revealDeclaration"]
    },
    {
      "before": ["<leader>", "g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["<leader>", "g", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["<leader>", "g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "R"],
      "commands": ["editor.action.refactor"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "F"],
      "commands": ["editor.action.autoFix"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["outline.focus"]
    },
    {
      "before": ["<leader>", "c", "<space>"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<leader>", "c", "u"],
      "commands": ["editor.action.removeCommentLine"]
    },
    {
      "before": ["<leader>", "c", "c"],
      "commands": ["editor.action.addCommentLine"]
    },
    {
      "before": ["<leader>", "c", "b"],
      "commands": ["editor.action.blockComment"]
    },
    {
      "before": ["<leader>", "m"],
      "commands": ["editor.action.addSelectionToNextFindMatch"]
    },
    {
      "before": ["<leader>", "M"],
      "commands": ["editor.action.selectHighlights"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<leader>", "c", "<space>"],
      "commands": ["editor.action.commentline"]
    },
    {
      "before": ["<leader>", "c", "u"],
      "commands": ["editor.action.removeCommentLine"]
    },
    {
      "before": ["<leader>", "c", "c"],
      "commands": ["editor.action.addCommentLine"]
    },
    {
      "before": ["<leader>", "c", "b"],
      "commands": ["editor.action.blockComment"]
    },
    {
      "before": ["<leader>", "m"],
      "commands": ["editor.action.addSelectionToNextFindMatch"]
    },
    {
      "before": ["<leader>", "M"],
      "commands": ["editor.action.selectHighlights"]
    }
  ],

  // language-specific
  // > frontend
  // > > imports
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // > > formatting
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // > > linting
  "eslint.options": {},
  "eslint.codeActionsOnSave.mode": "all",
  // > > testing
  "jest.jestCommandLine": "yarn test",

  // > python
  "python.languageServer": "Pylance",
  "python.formatting.provider": "black",
  "python.defaultInterpreterPath": "python3",
  "python.pythonPath": "/usr/local/bin/python3",

  // > go
  "go.toolsManagement.autoUpdate": true,

  // > markdown
  "rewrap.autoWrap.notification": "text",
  "[markdown]": {
    "editor.occurrencesHighlight": false,
    "rewrap.autoWrap.enabled": true,
    "rewrap.wrappingColumn": 80,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  }
}
